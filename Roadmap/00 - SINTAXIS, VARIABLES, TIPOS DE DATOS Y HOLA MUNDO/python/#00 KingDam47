Valor1,Valor2 = True,False  

    #Array o lista
Arreglo = [1,2,3,4,5] #los elementos pueden ser numeros, strings etc...

    #Tuplas
Tupla = (1,2,3,4,5) #la diferencia de la tupla con los arrays es que la tupla no es modificable.

    #Diccionario
Diccionario = {"Nombre": "Luis","Edad": 18} 
print(Diccionario["Edad"]) #forma de mostrar un elemento especifico del diccionario. salida es 18
 
